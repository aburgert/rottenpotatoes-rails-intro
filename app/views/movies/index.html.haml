-#  This file is app/views/movies/index.html.haml
%h1 All Movies
= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1##, true if !params.has_key? "ratings" || params["ratings"].find_index #{rating}) #supposed to check all boxes on fresh page or only previously selected boxe
  = submit_tag 'Refresh', "id" => "ratings_submit"
%table#movies
  %thead
    %tr
      %th#title_header{:class => @titleClass}= link_to "Movie Title", movies_path({"sort" => "title"})
      %th Rating
      %th#release_date{:class => @dateClass}= link_to "Release Date", movies_path({"sort" => "release_date"})
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
